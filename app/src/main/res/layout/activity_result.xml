<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorUNSWYellow"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/showCorrectNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingLeft="125dp"
            android:paddingTop="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingRight="110dp"
            android:paddingTop="20dp"
            android:text="/5"
            android:textColor="@color/colorBlack"
            android:textSize="100dp" />


    </LinearLayout>


    <TextView
        android:id="@+id/txt_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_result"
        android:fontFamily="casual"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Score"
        android:textColor="@color/colorBlack"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/showResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnTryAgain"
        android:layout_below="@+id/txt_score"
        android:fontFamily="casual"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="70dp" />

    <Button
        android:id="@+id/btnTryAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnTryAnother"
        android:backgroundTint="@color/colorBlack"
        android:fontFamily="casual"
        android:padding="20dp"
        android:text="@string/tryAgain"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTryAnother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorBlack"
        android:fontFamily="casual"
        android:padding="20dp"
        android:text="@string/finish"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />






</RelativeLayout>