<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.celine.infs3634grouph.PastRecordActivity">

    <TextView
        android:id="@+id/record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_hor"
        android:layout_marginTop="@dimen/margin_ver"
        android:fontFamily="casual"
        android:text="History"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:layout_below="@+id/record_title"
        android:layout_marginBottom="@dimen/text_pad"
        android:layout_marginTop="@dimen/text_pad"
        android:background="@color/colorBlack" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:layout_marginLeft="@dimen/margin_hor"
        android:layout_marginRight="@dimen/margin_hor" />
</RelativeLayout>
